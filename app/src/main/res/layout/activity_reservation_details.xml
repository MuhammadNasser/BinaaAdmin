<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:layout_centerInParent="true"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rect_gray_stroke"
                android:orientation="horizontal"
                android:weightSum="5">

                <com.binaa.binaaadmin.views.TextViewRobotoLight
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:layout_weight="2"
                    android:gravity="start"
                    android:lines="1"
                    android:text="@string/name"
                    android:textAlignment="viewStart"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/textSizeSmall"
                    tools:ignore="RelativeOverlap" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/grayHint" />

                <com.binaa.binaaadmin.views.TextViewRobotoLight
                    android:id="@+id/textViewName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:layout_weight="3"
                    android:lines="1"
                    android:textAlignment="center"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/textSizeNormal"
                    tools:ignore="RelativeOverlap" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rect_gray_stroke"
                android:orientation="horizontal"
                android:weightSum="5">

                <com.binaa.binaaadmin.views.TextViewRobotoLight
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:layout_weight="2"
                    android:gravity="start"
                    android:lines="1"
                    android:text="@string/e_mail"
                    android:textAlignment="viewStart"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/textSizeSmall"
                    tools:ignore="RelativeOverlap" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/grayHint" />

                <com.binaa.binaaadmin.views.TextViewRobotoLight
                    android:id="@+id/textViewEmail"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:layout_weight="3"
                    android:lines="1"
                    android:textAlignment="center"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/textSizeXSmall"
                    tools:ignore="RelativeOverlap" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rect_gray_stroke"
                android:orientation="horizontal"
                android:weightSum="5">

                <com.binaa.binaaadmin.views.TextViewRobotoLight
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:layout_weight="2"
                    android:gravity="start"
                    android:lines="1"
                    android:text="@string/phone"
                    android:textAlignment="viewStart"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/textSizeSmall"
                    tools:ignore="RelativeOverlap" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/grayHint" />

                <com.binaa.binaaadmin.views.TextViewRobotoLight
                    android:id="@+id/textViewPhone"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:layout_weight="3"
                    android:lines="1"
                    android:textAlignment="center"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/textSizeNormal"
                    tools:ignore="RelativeOverlap" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rect_gray_stroke"
                android:orientation="horizontal"
                android:weightSum="5">

                <com.binaa.binaaadmin.views.TextViewRobotoLight
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:layout_weight="2"
                    android:gravity="start"
                    android:lines="1"
                    android:text="@string/country"
                    android:textAlignment="viewStart"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/textSizeSmall"
                    tools:ignore="RelativeOverlap" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/grayHint" />

                <com.binaa.binaaadmin.views.TextViewRobotoLight
                    android:id="@+id/textViewCountry"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:layout_weight="3"
                    android:lines="1"
                    android:textAlignment="center"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/textSizeNormal"
                    tools:ignore="RelativeOverlap" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rect_gray_stroke"
                android:orientation="horizontal"
                android:weightSum="5">

                <com.binaa.binaaadmin.views.TextViewRobotoLight
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:layout_weight="2"
                    android:gravity="start"
                    android:lines="1"
                    android:text="@string/passport"
                    android:textAlignment="viewStart"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/textSizeSmall"
                    tools:ignore="RelativeOverlap" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/grayHint" />

                <com.binaa.binaaadmin.views.TextViewRobotoLight
                    android:id="@+id/textViewPassport"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:layout_weight="3"
                    android:lines="1"
                    android:textAlignment="center"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/textSizeNormal"
                    tools:ignore="RelativeOverlap" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rect_gray_stroke"
                android:orientation="horizontal"
                android:weightSum="5">

                <com.binaa.binaaadmin.views.TextViewRobotoLight
                    android:id="@+id/textViewCodeTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:layout_weight="2"
                    android:gravity="start"
                    android:lines="1"
                    android:text="@string/code"
                    android:textAlignment="viewStart"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/textSizeSmall"
                    tools:ignore="RelativeOverlap" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/grayHint" />

                <com.binaa.binaaadmin.views.TextViewRobotoLight
                    android:id="@+id/textViewCode"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:layout_weight="3"
                    android:lines="1"
                    android:textAlignment="center"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/textSizeNormal"
                    tools:ignore="RelativeOverlap" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rect_gray_stroke"
                android:orientation="horizontal"
                android:weightSum="5">

                <com.binaa.binaaadmin.views.TextViewRobotoLight
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:layout_weight="2"
                    android:gravity="start"
                    android:lines="1"
                    android:text="@string/arrivalDate"
                    android:textAlignment="viewStart"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/textSizeSmall"
                    tools:ignore="RelativeOverlap" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/grayHint" />

                <com.binaa.binaaadmin.views.TextViewRobotoLight
                    android:id="@+id/textViewArrival"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:layout_weight="3"
                    android:lines="1"
                    android:textAlignment="center"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/textSizeNormal"
                    tools:ignore="RelativeOverlap" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rect_gray_stroke"
                android:orientation="horizontal"
                android:weightSum="5">

                <com.binaa.binaaadmin.views.TextViewRobotoLight
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:layout_weight="2"
                    android:gravity="start"
                    android:lines="1"
                    android:text="@string/leaveDate"
                    android:textAlignment="viewStart"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/textSizeSmall"
                    tools:ignore="RelativeOverlap" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/grayHint" />

                <com.binaa.binaaadmin.views.TextViewRobotoLight
                    android:id="@+id/textViewLeave"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:layout_weight="3"
                    android:lines="1"
                    android:textAlignment="center"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/textSizeNormal"
                    tools:ignore="RelativeOverlap" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayoutWantCar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rect_gray_stroke"
                android:orientation="horizontal"
                android:weightSum="5">

                <com.binaa.binaaadmin.views.TextViewRobotoLight
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:layout_weight="2"
                    android:gravity="start"
                    android:lines="1"
                    android:text="@string/rentCar"
                    android:textAlignment="viewStart"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/textSizeXSmall"
                    tools:ignore="RelativeOverlap" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/grayHint" />

                <com.binaa.binaaadmin.views.TextViewRobotoLight
                    android:id="@+id/textViewWantCar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:layout_weight="3"
                    android:lines="1"
                    android:textAlignment="center"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/textSizeNormal"
                    tools:ignore="RelativeOverlap" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayoutPickupFromAirport"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rect_gray_stroke"
                android:orientation="horizontal"
                android:weightSum="5">

                <com.binaa.binaaadmin.views.TextViewRobotoLight
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:layout_weight="2"
                    android:gravity="start"
                    android:lines="1"
                    android:text="@string/pickupFromAirport"
                    android:textAlignment="viewStart"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/textSizeXSmall"
                    tools:ignore="RelativeOverlap" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/grayHint" />

                <com.binaa.binaaadmin.views.TextViewRobotoLight
                    android:id="@+id/textViewPickupFromAirport"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:layout_weight="3"
                    android:lines="1"
                    android:textAlignment="center"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/textSizeNormal"
                    tools:ignore="RelativeOverlap" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayoutWantTravel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rect_gray_stroke"
                android:orientation="horizontal"
                android:weightSum="5">

                <com.binaa.binaaadmin.views.TextViewRobotoLight
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:layout_weight="2"
                    android:gravity="start"
                    android:lines="1"
                    android:text="@string/Want_travel"
                    android:textAlignment="viewStart"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/textSizeSmall"
                    tools:ignore="RelativeOverlap" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/grayHint" />

                <com.binaa.binaaadmin.views.TextViewRobotoLight
                    android:id="@+id/textViewWantTravel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:layout_weight="3"
                    android:lines="1"
                    android:textAlignment="center"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/textSizeNormal"
                    tools:ignore="RelativeOverlap" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayoutWantDriver"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rect_gray_stroke"
                android:orientation="horizontal"
                android:visibility="gone"
                android:weightSum="5">

                <com.binaa.binaaadmin.views.TextViewRobotoLight
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:layout_weight="2"
                    android:gravity="start"
                    android:lines="1"
                    android:text="@string/Want_driver"
                    android:textAlignment="viewStart"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/textSizeSmall"
                    tools:ignore="RelativeOverlap" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/grayHint" />

                <com.binaa.binaaadmin.views.TextViewRobotoLight
                    android:id="@+id/textViewWantDriver"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:layout_weight="3"
                    android:lines="1"
                    android:textAlignment="center"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/textSizeNormal"
                    tools:ignore="RelativeOverlap" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <include
        android:id="@+id/viewLoading"
        layout="@layout/loading_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:visibility="gone" />
</RelativeLayout>